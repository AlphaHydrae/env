// https://zed.dev/docs/configuring-zed
{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "model_parameters": []
  },
  "auto_install_extensions": {
    "html": true,
    "tokyo-night": true
  },
  "auto_signature_help": true,
  "base_keymap": "VSCode",
  "buffer_font_features": {
    "calt": 0
  },
  "buffer_font_size": 18.0,
  "cursor_shape": "bar",
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null
    }
  },
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "ruby": ["Vagrantfile"],
    "dotenv": [".env.sample"]
  },
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "gutter": {
    "line_numbers": true
  },
  "hard_tabs": false,
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "CSS": {
      "language_servers": ["tailwindcss-language-server"]
    },
    "Elixir": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  },
  "minimap": {
    "show": "auto"
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false
  },
  "scroll_beyond_last_line": "off",
  "scrollbar": {
    "diagnostics": "all"
  },
  "show_whitespaces": "boundary",
  "soft_wrap": "none",
  "tab_bar": {
    "show": true
  },
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_size": 15.0,
    "font_family": "Meslo LG M DZ for Powerline"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "ui_font_size": 16,
  "vim_mode": true,
  "wrap_guides": [80]
}
